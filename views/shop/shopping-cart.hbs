{{#if products}}
    <div class="row centered mt-4">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <ul class="list-group">
                {{#each products}}
                <li class="list-group-item">

                    <strong>{{this.items.title}}</strong>
                    <span class="label label-success">{{this.price}}</span>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Reduce by 1</a>
                            <a class="dropdown-item" href="#">Remove all</a>
                        </div>
                    </div>
                    <span class="badge badge-dark float-lg-right">{{this.quantity}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row centered mt-4">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <strong>Total: {{session.cart.totalPrice}}</strong>

        </div>
    </div>
    <hr>

    <div class="row centered mt-4">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <button class="btn btn-success" type="button">Checkout</button>

        </div>
    </div>
{{else}}
    <div class="row centered mt-4">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <h2>No items in cart</h2>

        </div>
    </div>
{{/if}}


